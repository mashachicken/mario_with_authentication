<h3>Add a new review:</h3>

<%= form_for [@product, @review] do |f| %>
<%= f.label :author %> <br>
<%= f.text_field :author %> <br> <br>
<%= f.label :Did_you_like_our_product? %> <br>
<%= f.text_area :content_body %>
<%= f.label :rating %><br>
<%= f.number_field :rating, min: 1, max: 5, step: 1 %>
<p><%= f.submit %></p>
<% end %>
